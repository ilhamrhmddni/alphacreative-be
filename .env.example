# Alphacreative backend environment template
# Duplicate this file to `.env` and fill in values for your environment.

DATABASE_URL="postgresql://<db_user>:<db_password>@<db_host>:5432/<db_name>?schema=public"
PORT=4000
NODE_ENV=production
JWT_SECRET="<generate-a-strong-secret>"
TOKEN_EXPIRES_IN="1d"

UPLOAD_MAX_MB=10
UPLOAD_ALLOWED_MIME=image/jpeg,image/png,image/webp
UPLOAD_ROOT=/var/www/alphacreative/uploads
UPLOAD_EVENT_DIR=events
UPLOAD_NEWS_DIR=news
UPLOAD_PROFILE_DIR=profiles
UPLOAD_FORCE_WEBP=true
UPLOAD_WEBP_QUALITY=82
UPLOAD_GALLERY_DIR=gallery
FILE_BASE_URL=https://api.alphacreative.com
CORS_ALLOWED_ORIGINS=https://alphacreative.com
TRUST_PROXY=true

PUBLIC_LANDING_EVENTS_LIMIT=8
PUBLIC_LANDING_EVENTS_SECTION_LIMIT=4
PUBLIC_LANDING_NEWS_LIMIT=4
PUBLIC_LANDING_NEWS_EXCERPT=160
PUBLIC_LANDING_HEADLINE_EXCERPT=220
PUBLIC_LANDING_CHAMPIONS_LIMIT=4
PUBLIC_LANDING_GALLERY_LIMIT=10

NEWS_PAGE_LIMIT=10
NEWS_PAGE_REVALIDATE=180
NEWS_PAGE_EXCERPT=160
NEWS_STATIC_PARAMS_LIMIT=50
NEWS_STATIC_PARAMS_REVALIDATE=300
NEWS_DETAIL_REVALIDATE=60
